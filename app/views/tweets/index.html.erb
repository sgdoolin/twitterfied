<tweets id="notice"> <%= notice %></tweets>

<h1>All the Tweets In the Universe!!!</h1>

<!-- The table that's going to show all of our tweets -->

<table>
<!-- The head of our table -->
<thead>
<tr>
<th>Message</th>
<th>User</th>
<th colspan="3"></th>
</tr>

</thead>

<!-- The body of our table -->
<tbody>

<!-- Runs through every Tweet and puts each one on its own row -->
<% @tweets.each do |tweet| %>
	<tr>
		<td><%= tweet.message %></td>
		<td><%= tweet.user.username %></td>
		<td><%= link_to 'Show', tweet %></td>
		<td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
		<td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?'} %></td>


	</tr>
<% end %>

</tbody>
</table>
<br>
<%= link_to 'New Tweet', new_tweet_path %>
